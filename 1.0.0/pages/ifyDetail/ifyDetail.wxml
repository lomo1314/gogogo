			<image class="nav-updown1" src="../../image/monry0.png"></image>
		</view>
		<view class="nav-text {{currentTab==3 ? 'active' : ''}}" data-current="3" bindtap="swichNav">优惠券</view>
		<!--<view class="nav-bar" style="left:{{251.2*currentTab}}rpx;"></view>-->
	</view>

	<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange">
		<!--综合-->
		<swiper-item>
			<scroll-view  class="hot-box" scroll-y="true" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrollUpper">
				<view hidden="{{failhidden}}" class="failhidden">网络不给力，请检查您的网络</view>
